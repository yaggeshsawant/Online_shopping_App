<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UseCompoundDrawables">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardPreventCornerOverlap="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary_clr"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/companyNameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:text="जय भोले आटोडील"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/regImage"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/no_img" />

        <TextView
            android:id="@+id/ownerNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawablePadding="10dp"
            android:gravity="start|center"
            android:padding="3dp"
            android:text="जय भोले आटोडील"
            android:textStyle="bold"
            app:drawableLeftCompat="@drawable/profile"
            app:drawableTint="@color/primary_clr" />

        <!--       <TextView
                   android:id="@+id/mobileCall"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:drawablePadding="10dp"
                   android:gravity="start|center"
                   android:padding="3dp"
                   android:text="9685124979"
                   android:textStyle="bold"
                   app:drawableLeftCompat="@drawable/call_icn"
                   app:drawableTint="@color/primary_clr" />-->

        <TextView
            android:id="@+id/addressText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:gravity="start|center"
            android:padding="3dp"
            android:text="Khandwa"
            android:textStyle="bold"
            app:drawableLeftCompat="@drawable/ic_address_icn"
            app:drawableTint="@color/primary_clr" />

        <TextView
            android:id="@+id/productText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:gravity="start|center"
            android:padding="3dp"
            android:text="Khandwa"
            android:textStyle="bold"
            app:drawableLeftCompat="@drawable/ic_designation"
            app:drawableTint="@color/primary_clr" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:gravity="center">


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="5dp"
                app:cardPreventCornerOverlap="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/mobileCall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/dial_btn_design"
                        android:drawableStart="@drawable/call_icn"
                        android:drawablePadding="5dp"
                        android:drawableTint="@color/white"
                        android:gravity="start|center"
                        android:paddingEnd="7dp"
                        android:text="9685124979"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="5dp"
                app:cardPreventCornerOverlap="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/whatsapp_btn_design"
                        android:drawableStart="@drawable/img_whatsap"
                        android:drawablePadding="5dp"
                        android:drawableTint="@color/white"
                        android:gravity="start|center"
                        android:text="Chat"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        tools:ignore="RtlSymmetry" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="5dp"
                app:cardPreventCornerOverlap="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/location_btn_design"
                        android:padding="5dp"
                        android:src="@drawable/ic_address_icn"
                        app:tint="@color/white">

                    </ImageButton>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
