<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@drawable/login_shape_bk"
            android:orientation="vertical">

        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7">

        </androidx.appcompat.widget.LinearLayoutCompat>


        <!-- Content for the background -->

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="7dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="10dp">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:stretchColumns="*">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">



                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        app:cardCornerRadius="5dp"
                        app:cardPreventCornerOverlap="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="10">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="10"
                                android:background="@color/navyBlue"
                                android:gravity="center"
                                android:padding="3dp"
                                android:text="Order detail"
                                android:textColor="@color/white"
                                android:textSize="17dp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="@color/gray"
                        android:layout_marginTop="7dp"/>
                    <!-- First Row -->
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">



                        <View
                            android:layout_width="1dip"
                            android:layout_height="match_parent"
                            android:background="@color/custom_gray" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="3dip"
                            android:text="Order Id"
                            android:textColor="@color/dark_red"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="1dip"
                            android:layout_height="match_parent"
                            android:background="@color/custom_gray" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="3dip"
                            android:text="Bill Amount"
                            android:textColor="@color/dark_red"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="1dip"
                            android:layout_height="match_parent"
                            android:background="@color/custom_gray" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="3dip"
                            android:text="Order Date"
                            android:textColor="@color/dark_red"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="1dip"
                            android:layout_height="match_parent"
                            android:background="@color/custom_gray" />


                    </TableRow>
<!--Second Row--> <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/gray"
                    />
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">



                        <View
                            android:layout_width="1dip"
                            android:layout_height="match_parent"
                            android:background="@color/custom_gray" />

                        <TextView
                            android:id="@+id/order_id"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="3dip"
                            android:text="Amount"
                            android:textColor="@color/dark_red"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="1dip"
                            android:layout_height="match_parent"
                            android:background="@color/custom_gray" />

                        <TextView
                            android:id="@+id/order_amount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="3dip"
                            android:text="Amount"
                            android:textColor="@color/dark_red"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="1dip"
                            android:layout_height="match_parent"
                            android:background="@color/custom_gray" />

                        <TextView
                            android:id="@+id/order_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="3dip"
                            android:text="Order Date"
                            android:textColor="@color/dark_red"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="1dip"
                            android:layout_height="match_parent"
                            android:background="@color/custom_gray" />


                    </TableRow>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="@color/gray" />



                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:cardCornerRadius="5dp"
                        app:cardPreventCornerOverlap="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="10">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="10"
                                android:background="@color/navyBlue"
                                android:gravity="center"
                                android:padding="3dp"
                                android:text="Items details"
                                android:textColor="@color/white"
                                android:textSize="17dp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="@color/gray"
                        android:layout_marginTop="7dp"/>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">



                        <View
                            android:layout_width="1dip"
                            android:layout_height="match_parent"
                            android:background="@color/custom_gray" />

                        <TextView
                            android:id="@+id/Serial_item"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:padding="3dip"
                            android:text="S.no"
                            android:textColor="@color/dark_red"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="1dip"
                            android:layout_height="match_parent"
                            android:background="@color/custom_gray" />

                        <TextView
                            android:id="@+id/item_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="3dip"
                            android:text="Item name"
                            android:textColor="@color/dark_red"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="1dip"
                            android:layout_height="match_parent"
                            android:background="@color/custom_gray" />

                        <TextView
                            android:id="@+id/item_qty"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="3dip"
                            android:text="price"
                            android:textColor="@color/dark_red"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="1dip"
                            android:layout_height="match_parent"
                            android:background="@color/custom_gray" />

                        <TextView
                            android:id="@+id/item_total"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="3dip"
                            android:text="qty"
                            android:textColor="@color/dark_red"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="1dip"
                            android:layout_height="match_parent"
                            android:background="@color/custom_gray" />


                    </TableRow>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="@color/gray" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/item_detail_recylerView_id"
                    android:layout_width="match_parent"
                    />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center">
<!--//for payment mode-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardPreventCornerOverlap="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:background="@color/navyBlue"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="Payment Mode"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_gravity="center"
            app:cardPreventCornerOverlap="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">


                <TextView
                    android:id="@+id/payment_mode_id"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="Payment Mode"
                    android:textColor="@color/dark_red"
                    android:textSize="17dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>



    </LinearLayout>

<!--    //for address-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardPreventCornerOverlap="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:background="@color/navyBlue"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="Shipping Adress"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_gravity="center"
            app:cardPreventCornerOverlap="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">


                <TextView
                    android:id="@+id/adress_id"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="adress"
                    android:textColor="@color/dark_red"
                    android:textSize="17dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>




    </LinearLayout>

</LinearLayout>


            </TableLayout>


        </ScrollView>
    </androidx.cardview.widget.CardView>
</FrameLayout>
