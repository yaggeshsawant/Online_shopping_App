<resources>

    <style name="frontHeadingStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/bottom_border_design</item>

        <!-- You can add more attributes specific to this style -->
    </style>

    <style name="homeCustomDivider">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@color/primary_clr</item>
    </style>

    <style name="NavigationViewSeparatorLine">
        <item name="android:listDivider">@color/primary_clr</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="PageNotFoundDesign">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">8dp</item>
        <!-- Add more attributes as needed -->
    </style>
