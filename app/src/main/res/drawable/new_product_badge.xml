<!-- res/drawable/discount_badge.xml -->

<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color of the discount badge -->
    <solid android:color="@color/primary_clr" /> <!-- Yellow color -->

    <!-- Corner radius for rounded corners -->
    <corners android:radius="4dp" /> <!-- Adjust as needed -->

    <!-- Padding inside the badge -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="4dp"
        android:bottom="4dp" />

    <!-- Stroke (border) around the badge -->
    <stroke
        android:width="1dp"
        android:color="#FF9800" /> <!-- Orange color -->

</shape>
