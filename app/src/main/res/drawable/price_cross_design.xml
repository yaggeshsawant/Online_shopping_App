<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape (rectangle with rounded corners) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Transparent background -->
            <corners android:radius="4dp" /> <!-- Adjust corner radius as needed -->
        </shape>
    </item>

    <!-- Strikethrough line -->
    <item> <!-- Adjust top position to align the strikethrough line -->
        <shape android:shape="line">
            <stroke
                android:width="1dp"
                android:color="@color/light_gray" /> <!-- Color of the strikethrough line -->
        </shape>
    </item>
</layer-list>
